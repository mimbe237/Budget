rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fonction pour vérifier si l'utilisateur est connecté
    function isAuthenticated() {
      return request.auth != null;
    }

    // Fonction pour vérifier si l'utilisateur est le propriétaire des données
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Vérifie si l'utilisateur a un rôle admin via custom claims
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.admin == true ||
        request.auth.token.role == 'admin'
      );
    }

    // Autorise lecture globale pour admin
    function adminOrOwner(userId) {
      return isAdmin() || isOwner(userId);
    }

    // Règles pour la collection users et toutes ses sous-collections
    // Chaque utilisateur a un accès complet (lecture/écriture) à ses propres données
    match /users/{userId} {
      // Lecture : propriétaire ou admin
      allow read: if adminOrOwner(userId);
      // Ecriture : propriétaire pour ses champs autorisés OU admin
      allow write: if isOwner(userId) || isAdmin();
      
      match /{document=**} {
        allow read: if adminOrOwner(userId);
        allow write: if isOwner(userId) || isAdmin();
      }
    }

    // Collection appSettings - paramètres globaux de l'application
    match /appSettings/{settingId} {
      // Lecture publique pour tous les utilisateurs authentifiés
      allow read: if isAuthenticated();
      // Écriture réservée aux admins uniquement
      allow write: if isAdmin();
    }

    // Exemples supplémentaires : transactions, admin_logs
    // Transactions utilisateur (sous-collection sous /users/{userId})
    match /users/{userId}/transactions/{transactionId} {
      allow read: if adminOrOwner(userId);
      allow write: if isOwner(userId) || isAdmin();

      // Validation basique pour aligner les écritures depuis le module de financement d'objectifs
      allow create, update: if isOwner(userId)
        && request.resource.data.keys().hasAll(['type','amount'])
        && request.resource.data.type in ['income','expense','transfer']
        && request.resource.data.amount is number
        && request.resource.data.amount >= 0;
    }

    // Comptes utilisateur (soldes, type, icône)
    match /users/{userId}/accounts/{accountId} {
      allow read: if adminOrOwner(userId);
      allow write: if isOwner(userId) || isAdmin();

      // Autoriser mises à jour de solde lors d'un financement d'objectif
      allow update: if isOwner(userId)
        && request.resource.data.balance is number;
    }

    // Objectifs utilisateur (épargne, progression)
    match /users/{userId}/goals/{goalId} {
      allow read: if adminOrOwner(userId);
      allow write: if isOwner(userId) || isAdmin();

      // Autoriser mises à jour de progression/financement
      allow update: if isOwner(userId)
        && (
          request.resource.data.keys().hasAny(['fundedAmount','progress','lastFundedAt'])
        );
    }

    // Budgets utilisateur
    match /users/{userId}/budgets/{budgetId} {
      allow read: if adminOrOwner(userId);
      allow write: if isOwner(userId) || isAdmin();
    }

    // Ancienne collection racine (pour compatibilité / exports admin)
    match /transactions/{transactionId} {
      // For reads, use resource.data (existing doc); for writes use request.resource.data (incoming data)
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow write: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    match /admin_logs/{logId} {
      // Lecture réservée aux admins. Écriture côté client refusée (backend Admin SDK uniquement)
      allow read: if isAdmin();
    }

    // Traductions de l'application (clé/valeur FR/EN)
    // Lecture publique (pour chargement côté client). Écriture réservée aux admins via custom claims.
    match /translations/{translationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
