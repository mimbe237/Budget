/**
 * @fileoverview Firestore Security Rules for Budget Pro application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has complete control
 * over their own data, and no user can access another user's data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information, accessible only by the user.
 * - /users/{userId}/expenses/{expenseId}: Stores expense data, accessible only by the user.
 * - /users/{userId}/categories/{categoryId}: Stores expense categories, accessible only by the user.
 * - /users/{userId}/budgetGoals/{budgetGoalId}: Stores budget goals, accessible only by the user.
 *
 * Key Security Decisions:
 * - All collections are secured using path-based authorization, relying on the `userId`
 *   parameter to match the authenticated user's UID.
 * - List operations are allowed within user-owned subcollections, enabling the user to
 *   retrieve their own data.
 * - No data denormalization is necessary due to the use of path-based authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper functions for authentication and authorization
     */
    function isAuthenticated() {
      return request.auth != null;
    }

    function hasAdminProfile(uid) {
      return exists(/databases/$(database)/documents/users/$(uid)) &&
             (get(/databases/$(database)/documents/users/$(uid)).data.isAdmin == true ||
              get(/databases/$(database)/documents/users/$(uid)).data.admin == true ||
              get(/databases/$(database)/documents/users/$(uid)).data.role == 'admin');
    }

    function isAdmin() {
      return isAuthenticated() &&
             (request.auth.token.admin == true ||
              request.auth.token.role == 'admin' ||
              hasAdminProfile(request.auth.uid));
    }

    function isChangingProtectedProfileFields() {
      return resource != null &&
        request.resource.data.diff(resource.data).changedKeys().hasAny(['role', 'admin', 'status']);
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function debtExists(debtId) {
      return exists(/databases/$(database)/documents/debts/$(debtId));
    }

    function isDebtOwner(debtId) {
      return isAuthenticated() &&
             debtExists(debtId) &&
             get(/databases/$(database)/documents/debts/$(debtId)).data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) &&
                    request.resource.data.id == userId &&
                    (!('role' in request.resource.data) || request.resource.data.role == 'user') &&
                    (!('admin' in request.resource.data) || request.resource.data.admin == false);
      allow update: if isAdmin() || (isOwner(userId) && !isChangingProtectedProfileFields());
      allow delete: if isAdmin();
    }

    match /users/{userId}/expenses/{expenseId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/categories/{categoryId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/budgetGoals/{budgetGoalId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      match /transactions/{transactionId} {
        allow get: if isOwner(userId) || isAdmin();
        allow list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update: if isOwner(userId) || isAdmin();
        allow delete: if isOwner(userId) || isAdmin();
      }
    }

    match /users/{userId}/goals/{goalId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/goalTransactions/{transactionId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/goalsHistory/{historyId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/debtAlerts/{alertId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/monthlyBudgets/{period} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }

    match /debts/{debtId} {
      // Autorise la liste uniquement pour un utilisateur authentifié ;
      // les documents retournés restent filtrés par la règle get ci-dessous.
      allow list: if isAuthenticated();
      // Autorise lecture (get) uniquement pour le propriétaire de la dette
      allow get: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Création uniquement si userId (payload) correspond au user connecté
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Mise à jour/suppression uniquement par le propriétaire, et sans usurpation de userId
      allow update: if isDebtOwner(debtId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isDebtOwner(debtId);
    }

    match /debtSchedules/{scheduleId} {
      allow read: if request.auth != null && isDebtOwner(resource.data.debtId);
      allow create, update, delete: if false;
    }

    match /debtPayments/{paymentId} {
      allow read: if request.auth != null && isDebtOwner(resource.data.debtId);
      allow create, update, delete: if false;
    }

    match /debtRateHistory/{historyId} {
      allow read: if request.auth != null && isDebtOwner(resource.data.debtId);
      allow create, update, delete: if false;
    }

    match /admin_logs/{logId} {
      allow create: if isAdmin();
      allow read: if isAdmin();
      allow list: if isAdmin();
    }

    match /adminConfig/homepage {
      allow get: if true;
      allow create, update, delete: if isAdmin();
    }

    match /adminConfig/{docId} {
      allow get, list, create, update, delete: if isAdmin();
    }

    match /adminAffiliations/{affiliationId} {
      allow get, list, create, update, delete: if isAdmin();
    }

    match /adminSubscriptions/{subscriptionId} {
      allow get, list, create, update, delete: if isAdmin();
    }

    // === AFFILIATION SYSTEM ===
    match /affiliates/{affiliateId} {
      allow get, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow list: if isAdmin();
    }

    match /affiliateLinks/{linkId} {
      allow get, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.affiliateId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.affiliateId;
      allow list: if isAdmin();
    }

    match /clicks/{clickId} {
      allow get, list: if isAuthenticated() && (request.auth.uid == resource.data.affiliateId || isAdmin());
      allow create: if true; // tracking public, anti-fraude côté backend
      allow update, delete: if false;
    }

    match /referrals/{referralId} {
      allow get, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.affiliateId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.affiliateId;
      allow list: if isAdmin();
    }

    match /commissions/{commissionId} {
      allow get, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.affiliateId || isAdmin());
      allow create: if isAdmin();
      allow list: if isAdmin();
    }

    match /payouts/{payoutId} {
      allow get, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.affiliateId || isAdmin());
      allow create: if isAdmin();
      allow list: if isAdmin();
    }

    match /programRules/{tier} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
