# ========================================
# Firebase Client Configuration (Web)
# ========================================
# Obtenez ces valeurs depuis:
# Firebase Console → Project Settings → General → Your apps → Web app

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ========================================
# Admin Configuration
# ========================================
# Liste des emails autorisés à accéder au panel admin
# Format: email1@domain.com,email2@domain.com

NEXT_PUBLIC_ADMIN_EMAILS=admin@budget.com

# ========================================
# Firebase Admin SDK (Server-side)
# ========================================
# Obtenez ces valeurs depuis:
# Firebase Console → Project Settings → Service Accounts → Generate new private key

FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Note: Pour FIREBASE_PRIVATE_KEY, remplacez les vrais retours à la ligne par \n
# Exemple: "-----BEGIN PRIVATE KEY-----\nMIIEv...\n-----END PRIVATE KEY-----\n"

# ========================================
# Application Configuration (Optionnel)
# ========================================

# URL de base de l'application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environnement (development, staging, production)
NODE_ENV=development

# Pagination par défaut
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=25

# Durée de session admin (en heures)
NEXT_PUBLIC_SESSION_DURATION=8
